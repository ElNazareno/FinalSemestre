<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTituloHabitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="familiar"
            android:layout_marginTop="2dp"
            android:textColor="#171717"
            android:fontFamily="sans-serif-black"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/txtDescripcionHabitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="20 m², Balcón, Vistas al jardín, Vistas a la montaña, Vistas a un lugar de interés, Vistas a la ciudad, Vistas a un patio interior, Aire acondicionado, Baño privado, TV de pantalla plana."
            android:fontFamily="serif"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fotos"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imgImagen1"
                        android:layout_width="200dp"
                        android:layout_height="110dp"
                        android:src="@drawable/llama"
                        android:scaleType="centerCrop"
                        android:onClick="img1"/>
                    <ImageView
                        android:id="@+id/imgImagen2"
                        android:layout_width="200dp"
                        android:layout_height="110dp"
                        android:src="@drawable/llama"
                        android:scaleType="centerCrop"
                        android:onClick="img2"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgImagen3"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:src="@drawable/llama"
                        android:scaleType="centerCrop"
                        android:onClick="img3"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgImagen4"
                        android:layout_width="350dp"
                        android:layout_height="140dp"
                        android:src="@drawable/llama"
                        android:scaleType="centerCrop"
                        android:onClick="img4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scaleType="centerCrop">
                    <ImageView
                        android:id="@+id/imgImagen5"
                        android:layout_width="175dp"
                        android:layout_height="110dp"
                        android:src="@drawable/llama"
                        android:scaleType="centerCrop"
                        android:onClick="img5"/>
                    <ImageView
                        android:id="@+id/imgImagen6"
                        android:layout_width="175dp"
                        android:layout_height="110dp"
                        android:src="@drawable/llama"
                        android:scaleType="centerCrop"
                        android:onClick="img6"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Habitacion"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">
            <TextView
                android:id="@+id/txtCaracteristicasHabitacion1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Tamaño 20 m²\n✓ 5 camas individuales"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/txtCaracteristicasHabitacion2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Habitacion con balcon"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vistas"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">
            <TextView
                android:id="@+id/txtCaracteristicasVistas1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Vistas al jardín\n✓ Vistas a la montaña\n✓ Vistas a lugares de interes"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/txtCaracteristicasVistas2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Vistas a la ciudad\n✓ Vistas a un patio interior"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Baño"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">
            <TextView
                android:id="@+id/txtCaracteristicasBaño1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ WC\n✓ Bañera o Ducha\n✓ Toallas\n✓ Secador de Pelo"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/txtCaracteristicasBaño2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Toallas / sabanas\n✓ Papel higienico"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipamiento de la habitacion"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">
            <TextView
                android:id="@+id/txtCaracteristicasEquipamiento1"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Desinfectante de manos\n✓ Juegos de mesa\n✓ Aire acondicionado\n✓ Calefacción\n✓ Ventilador \n✓ Entrada privada\n✓ Barandillas de seguridad"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/txtCaracteristicasEquipamiento2"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="✓ Toallas / sabanas\n✓ Papel higienico"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Politica de humo"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">
            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="- No se permite fumar"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="parking"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">
            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="- No hay parking"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="#1e1e1e"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:gravity="center|top">

            <TextView
                android:id="@+id/txtPrecioReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PEN"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="5dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnReservarHabitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_reserva"
            android:text="Reservar"
            android:onClick="reservaaaaaa"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>